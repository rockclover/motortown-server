# Steam credentials (if needed for SteamCMD integration)
STEAM_USERNAME=your_steam_username
STEAM_PASSWORD=your_steam_password
USE_STEAMCMD=true

# Server executable
EXE_NAME=MotorTownServer-Win64-Shipping.exe

# Server launch flags
MAP_NAME=Jeju_World
USE_PERF_THREADS=true
ENABLE_LOG=true
HEADLESS=false

# Server identity
SERVER_NAME=MotorTownDocker

# Ports
PORT_1=27015
PORT_2=27016

# Backup settings
ENABLE_BACKUP=true
BACKUP_PATH=/motortown/backup/archive

# Optional logging
LOG_PATH=/motortown/logs/server.log
