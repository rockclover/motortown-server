# Steam credentials (used if USE_STEAMCMD=true)
STEAM_USERNAME=your_steam_username
STEAM_PASSWORD=your_steam_password
USE_STEAMCMD=true

# Server executable
EXE_NAME=MotorTownServer-Win64-Shipping.exe

# Server launch flags
MAP_NAME=Jeju_World
USE_PERF_THREADS=true
ENABLE_LOG=true
HEADLESS=false

# Server identity
SERVER_NAME=MotorTownDocker
MAX_PLAYERS=20
WELCOME_MESSAGE=Welcome to Motor Town! Drive safe, race hard.

# Admins (comma-separated SteamIDs)
ADMIN_IDS=76561198450028527,76561198269240825,76561197990792332,76561199130373831

# Company settings
ALLOW_JOIN_WITH_COMPANY_VEHICLES=true
ALLOW_COMPANY_AI_DRIVERS=true
ENABLE_ECONOMY=true
DEFAULT_COMPANY_FUNDS=10000

# Vehicle AI settings
ENABLE_AI_DRIVERS=true
MAX_AI_DRIVERS=5
ALLOW_AUTO_DISPATCH=true
VEHICLE_TYPES=Truck,Van,Taxi

# Item settings
ENABLE_ITEM_TRADING=true
ENABLE_ITEM_SPAWNING=false
ITEM_SPAWN_RATE=Normal

# World settings
TIME_OF_DAY=Morning
WEATHER=Clear
TRAFFIC_DENSITY=Medium
ENABLE_NPCS=true

# Ports
PORT_1=27015
PORT_2=27016

# Backup settings
ENABLE_BACKUP=true
BACKUP_PATH=/motortown/backup/archive

# Optional logging
LOG_PATH=/motortown/logs/server.log
